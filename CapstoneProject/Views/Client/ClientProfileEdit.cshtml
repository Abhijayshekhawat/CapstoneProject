@{
    ViewData["Title"] = "Edit Profile";
    Layout = "_ClientLayout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile Example</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        .profile-card {
            width: 350px;
            margin: 50px auto;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            text-align: center;
            border-radius: 10px;
        }

        .profile-img {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            margin-bottom: 15px;
        }

        .profile-info {
            text-align: left;
            margin-top: 20px;
        }

            .profile-info div {
                margin-bottom: 10px;
            }

            .profile-info .label {
                font-weight: bold;
            }

        .edit-icon {
            color: #007bff;
            font-size: 1.2em;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="profile-card">
        <img src="https://via.placeholder.com/100" alt="Profile Image" class="profile-img">
        <h3>Neel Patel</h3>

        <div class="profile-info">
            <div>
                <span class="label">First Name: </span>
                Neel <i class="fas fa-edit edit-icon"></i>
            </div>
            <div>
                <span class="label">Last Name: </span>
                Patel <i class="fas fa-edit edit-icon"></i>
            </div>
            <div>
                <span class="label">Email: </span>
                NeelPatel@Temple.edu <i class="fas fa-edit edit-icon"></i>
            </div>
            <div>
                <span class="label">Organization: </span>
                JP Morgan <i class="fas fa-edit edit-icon"></i>
            </div>
            
        </div>

        <div class="text-center mt-4">
            <a href="#" class="btn btn-primary btn-lg">Edit Profile</a>
        </div>
    </div>

   

    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
</body>
</html>
