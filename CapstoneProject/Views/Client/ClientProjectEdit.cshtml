@{

    Layout = null;

}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create an Account</title>
    <link rel="stylesheet" href="@Url.Content("/css/CreateAccountStyles.css")">
</head>
<body>
    <div class="container">
        <div class="left">
            <img src="@Url.Content("/images/Brainstorm.jpg")" alt="Temple Bell Tower">
        </div>
        <div class="right">
            <div class="create-account-box">
                <img src="@Url.Content("/images/Brainstorm.jpg")" alt="Temple Logo" class="logo">
                <h2>Create a Project</h2>
                <p>Fill in the following information to be reviewed.</p>
                <form asp-controller="Account" asp-action="AddNewProject" method="POST">
                    <div class="name-fields">
                        <input type="text" name="ProjectName" placeholder="Project Name" required>

                    </div>

                    <input type="text" name="ProjectDescription" placeholder="Project Description" required>
                    <button type="submit">Submit</button>
                </form>
                <p class="note">Please note your Project will have to be reviewed and approved before you can proceed.</p>
            </div>
        </div>
    </div>
</body>
</html>

