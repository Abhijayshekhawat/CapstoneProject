@{
    ViewData["Title"] = "User Dashboard";
    Layout = "_ClientLayout"; 
    var userName = "Jeet"; 
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Dashboard - CapstoneProject</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" />

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa;
        }

        .user-image {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            margin-bottom: 20px; 
        }

        .card {
            transition: transform 0.2s;
            border: none;
            border-radius: 12px;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        }

            .card:hover {
                transform: scale(1.05);
                box-shadow: 0 12px 24px rgba(0, 0, 0, 0.3);
            }

        .btn-translucent {
            background-color: rgba(255, 0, 0, 0.7); 
            color: white;
            border: none;
        }

            .btn-translucent:hover {
                background-color: rgba(255, 0, 0, 0.9);
                color: #fff;
            }

        .padding-top {
            padding-top: 30px;
        }

        .padding-bottom {
            padding-bottom: 150px;
        }

        h1 {
            color: #A50034; 
        }

        .card-title {
            color: #A50034; 
        }

        .card-text {
            color: #333; 
        }

        
        .main-container {
            
            padding-top: 50px; 
        }
    </style>
</head>
<body>
    <main class="container pb-3 padding-bottom main-container">
        <div class="text-center">
            <img src="@Url.Content("~/images/User.jpeg")" alt="User Image" class="user-image" />
            <h1>Hey, @userName!</h1>
            <p class="lead">This is a sample user dashboard layout.</p>
        </div>

        <div class="padding-top">
            <div class="row justify-content-center">
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Projects</h5>
                            <p class="card-text">Add new project idea. </p>
                            <a href="#" class="btn btn-translucent">Create Projects</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">View Projects</h5>
                            <p class="card-text">Check your ongoing projects.</p>
                            <a class="btn btn-translucent" asp-area="" asp-controller="Client" asp-action="ClientProjects">View Projects</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Edit Profile</h5>
                            <p class="card-text">Update your profile information.</p>
                            <a class="btn btn-translucent" asp-area="" asp-controller="Client" asp-action="ClientProfileEdit">View Projects</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div style="height: 200px;"></div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
