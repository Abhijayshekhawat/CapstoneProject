@model List<CapstoneProject.Models.ClassLibrary.Profile>
@{
    ViewData["Title"] = "Manage Profiles";
    Layout = "_ClientLayout";
}
@*temp styling*@

<head>
    <style>
        table,
        th,
        td {
            border: 1px solid black;
        }
    </style>
</head>

<div class="text-center">
    <h1 class="display-4">Admin Manage Profiles</h1>
    <table style="width:100%;">
        <tr>
            <th>
                Profile Status
                <span class="input-group">
                    <select class="form-control">
                        <option></option>
                        <option>Pending</option>
                        <option>Under Review</option>
                        <option>Approved</option>
                        <option>Rejected</option>
                    </select>
                </span>
            </th>
            <th>Organization</th>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
    </table>

    &nbsp;
    &nbsp;
    &nbsp;

    <h1 class="display-4">Filtered Profile View</h1>

    <table style="width:100%;">
        <tr>
            <th>Profile ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Organization</th>
            <th>Email</th>
            <th>Review Status</th>
            <th>View Profile</th>
        </tr>

        @*Iterate Database data into table rows*@
        @* We create a profile object for each profile and save those in a viewbag
        We use the viewbag to populate the Admin's view
        *@
        @if (ViewBag.AdminViewProfiles == null || ViewBag.AdminViewProfiles.Count == 0)
        {
            <center>
                <label>There are no profiles</label>
            </center>
        }
        else
        {
            foreach (var profile in ViewBag.AdminViewProfiles)
            {
                <tr>
                    <td>@profile.ProfileID</td>
                    <td>@profile.FirstName</td>
                    <td>@profile.LastName</td>
                    <td>@profile.Organization</td>
                    <td>@profile.Email</td>
                    <td>@profile.Status</td>
                    <td><a class="btn btn-primary" asp-area="" asp-controller="AdminProfiles" asp-action="ViewAProfile" asp-route-ProfileID="@profile.ProfileID">View Details</a></td>
                </tr>
            }
        }
    </table>
</div>