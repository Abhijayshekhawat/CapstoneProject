@model CapstoneProject.Models.AdminModel
@{
    ViewData["Title"] = "Manage Projects";
    Layout = "_ClientLayout";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/GridView.css" asp-append-version="true" />
    
</head>

<div class="container mt-5">
    <h3 class="text-center mb-4">Admin Manage Projects</h3>

    <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive">
                <table class="table table-striped table-hover shadow-sm">
                    <thead>
                        <tr>
                            <th>Project Name</th>
                            <th>Short Description</th>
                            <th>Project Status</th>
                            <th>Comments</th>
                            <th>View Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        @* Iterate Database data into table rows *@
                        <tr>
                            <td>Class Registration</td>
                            <td>Faster way to register for classes</td>
                            <td>Pending Review</td>
                            <td>None</td>
                            <td><a href="#" class="btn btn-primary">View Project</a></td>
                        </tr>
                        <tr>
                            <td>Food Truck App</td>
                            <td>Ordering from food trucks on campus through GrubHub</td>
                            <td>Denied</td>
                            <td>We don't like it</td>
                            <td><a href="#" class="btn btn-primary">View Project</a></td>
                        </tr>

                        @* Check if there are any projects to display *@
                        @if (ViewBag.AdminViewProjects == null || ViewBag.AdminViewProjects.Count == 0)
                        {
                            <tr>
                                <td colspan="5" class="text-center">There are no projects</td>
                            </tr>
                        }
                        else
                        {
                            foreach (var project in ViewBag.AdminViewProjects)
                            {
                                <tr>
                                    <td>@project.ProjectName</td>
                                    <td>@project.ShortDesc</td>
                                    <td>@project.ProjectStatus</td>
                                    <td>@project.Comments</td>
                                    <td><a href="#" class="btn btn-primary">View Details</a></td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
</div>

