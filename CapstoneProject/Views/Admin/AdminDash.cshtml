@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_ClientLayout";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/GridView.css" asp-append-version="true" />
</head>

<div class="container mt-5">
    <h1 class="display-4 text-center mb-4">Admin Dashboard</h1>

    <div class="mb-5">
        <h3 class="mb-3">Projects To Be Reviewed</h3>
        <div class="table-responsive">
            <table class="table table-striped table-hover shadow-sm">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Project Status</th>
                        <th>View Project</th>
                    </tr>
                </thead>
                <tbody>
                    @* Iterate database data here into table rows *@
                    <tr>
                        <td>Class Registration</td>
                        <td>An updated way to register for classes</td>
                        <td>Temple University</td>
                        <td><a href="#" class="btn btn-primary">View Project</a></td>
                    </tr>
                    @* Additional rows would be added dynamically here *@
                </tbody>
            </table>
        </div>
    </div>

    <div>
        <h3 class="mb-3">Profiles To Be Reviewed</h3>
        <div class="table-responsive">
            <table class="table table-striped table-hover shadow-sm">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Organization</th>
                        <th>View Profile</th>
                    </tr>
                </thead>
                <tbody>
                    @* Iterate database data here into table rows *@
                    <tr>
                        <td>Jeet</td>
                        <td>Jeet@JP.com</td>
                        <td>JP Morgan</td>
                        <td><a href="#" class="btn btn-primary">View Profile</a></td>
                    </tr>
                    @* Additional rows would be added dynamically here *@
                </tbody>
            </table>
        </div>
    </div>
</div>
