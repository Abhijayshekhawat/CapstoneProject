<!-- I think we will need to create 2 different layouts.    
     1) one nav bar for client (this .cshtml is for clients)
     2) a second nav bar for reviewer/admin -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CapstoneProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CapstoneProject.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Logo or Project Name -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="@Url.Content("/images/templeTlogo.png")" alt="Temple Logo" style="width: 50px; height: 50px;"  >
                </a>

                <!-- Toggle button for mobile views -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar items, including the dropdown and logout -->
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav ms-auto">
                        <!-- Right-aligns content -->

                        <!-- add image below on left side of "Welcome (Username) later on"  -->
                        <!-- Home link -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Welcome (UserName)</a>
                        </li>

                        <!-- Menu Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Menu
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <li><a class="dropdown-item" <a asp-area="" asp-controller="Home" asp-action="Privacy">Dashboard</a></li> <!--leaving here as example-->
                                <li><a class="dropdown-item" <a asp-area="" asp-controller="" asp-action="">Submitted Projects</a></li>
                                <li><a class="dropdown-item" <a asp-area="" asp-controller="" asp-action="">Edit Profile</a></li>

                                <!-- Admin Pages, only shown on navbar for now until we can separate admin and client login -->
                                <li><a class="dropdown-item" <a asp-area="" asp-controller="AdminDash" asp-action="Dashboard">Admin Dashboard</a></li>
                                <li><a class="dropdown-item" <a asp-area="" asp-controller="AdminProfiles" asp-action="ManageProfiles">Admin Profiles</a></li>
                                <li><a class="dropdown-item" <a asp-area="" asp-controller="AdminProject" asp-action="ManageProjects">Admin Projects</a></li>
                            </ul>
                        </li>

                        <!-- Logout link -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-center">
        <div class="container">
            &copy; 2024 - CapstoneProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
