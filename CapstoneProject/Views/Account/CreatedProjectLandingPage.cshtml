@model CapstoneProject.Models.CreateAccountModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create an Account</title>
    <link rel="stylesheet" href="@Url.Content("/css/CreateAccountStylesTwo.css")">
</head>
<body>
    <div class="container">
        <div class="left">
            <img src="@Url.Content("/images/Thinking_With_Blueprint_Logo.jpg")" alt="Temple Bell Tower">
        </div>
        <div class="right">
            <div class="create-account-box">
                <img src="@Url.Content("/images/templeTlogo.png")" alt="Temple Logo" class="logo">
                <h2>Project Has Been Submitted</h2>
              
                <form asp-controller="Account" asp-action="CreateAccount" method="post">
                  
                    
                    <button type="submit" name="action" value="createAccount">Home Page</button>
                </form>
                <p class="note">Thank You for your project proposal!</p>
                <p>@ViewBag.ErrorMessage</p>
            </div>
        </div>
    </div>
</body>
</html>

