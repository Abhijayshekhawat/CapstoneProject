@model CapstoneProject.Models.CreateAccountModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create an Account</title>
    <link rel="stylesheet" href="@Url.Content("/css/CreateAccountStyles.css")">
</head>
<body>
    <div class="container">
        <div class="left">
            <img src="@Url.Content("/images/bell_tower.jpg")" alt="Temple Bell Tower">
        </div>
        <div class="right">
            <div class="create-account-box">
                <img src="@Url.Content("/images/templeTlogo.png")" alt="Temple Logo" class="logo">
                <h2>Create an Account</h2>
                <p>Fill in the following information to be reviewed.</p>
                <form asp-controller="Account" asp-action="CreateAccount" method="post">
                    <div class="name-fields">
                        <input type="text" asp-for="FirstName" name="firstName" placeholder="First name" required>
                        <input type="text" asp-for="LastName" placeholder="Last name" required>
                    </div>
                    <input type="email" asp-for="Email" placeholder="Email address" required>
                    <input type="text" asp-for="Organization" placeholder="Organization" required>
                    <button type="submit" name="action" value="createAccount">Submit</button>
                </form>
                <p class="note">Please note your information will have to be reviewed and approved before you can proceed.</p>
                <p>@ViewBag.ErrorMessage</p>
            </div>
        </div>
    </div>
</body>
</html>

